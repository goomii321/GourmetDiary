<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/kurotobi</item>
        <item name="android:textColorHint">@color/kurotobi</item>
        <item name="android:editTextColor">@color/black_sumi</item>
    </style>

    <style name="menu_style">
        <item name="android:textSize">16dp</item>
        <item name="colorPrimary">@color/MASUHANA</item>
        <item name="android:textColor">@color/oldcolorPrimaryDark</item>
        <item name="fontFamily">@font/jf_openhuninn_</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/jf_openhuninn_</item>
        <item name="android:textColor">@color/kachi</item>
    </style>

    <style name="user_text_style">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/jf_openhuninn_</item>
        <item name="android:textColor">@color/kachi</item>
    </style>

    <style name="score_style">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/jf_openhuninn_</item>
        <item name="android:textColor">@color/red_jinzamomi</item>
    </style>

    <style name="text_title_style">
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/jf_openhuninn_</item>
        <item name="android:textColor">@color/kachi</item>
    </style>

    <style name="stores_title_style">
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/jf_openhuninn_</item>
        <item name="android:textColor">@color/kachi</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black_sumi</item>
    </style>

    <style name="toolbar_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/jf_openhuninn_</item>
        <item name="android:textColorPrimary">@color/oldcolorPrimaryDark</item>
    </style>

    <style name="button_style" parent="AppTheme">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="tint">@color/oldcolorPrimaryDark</item>
    </style>

    <style name="LogOutDialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/ugly_green</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorSecondary">@color/blue</item>
    </style>

</resources>
